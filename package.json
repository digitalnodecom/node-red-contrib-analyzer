{
  "name": "node-red-contrib-code-analyzer",
  "version": "0.3.0",
  "description": "A Node-RED global service that monitors function nodes for debugging artifacts and performance issues. Features real-time quality metrics, Vue.js dashboard, and comprehensive code analysis.",
  "main": "lib/analyzer.js",
  "scripts": {
    "dev": "npm run dev:admin",
    "dev:admin": "cd lib/admin && npm run dev", 
    "build": "npm run build:admin",
    "build:admin": "cd lib/admin && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --fix"
  },
  "author": "",
  "license": "ISC",
  "keywords": [
    "node-red",
    "code-analyzer",
    "debugging",
    "quality",
    "monitoring",
    "performance",
    "dashboard",
    "vue",
    "global-service"
  ],
  "node-red": {
    "version": ">=3.0.0",
    "nodes": {
      "code-analyzer": "lib/analyzer.js"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "is-docker": "^3.0.0",
    "meriyah": "^6.1.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "node-red-node-test-helper": "^0.3.4"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "lib/**/*.js",
      "!**/node_modules/**",
      "!lib/admin/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
